{
    "name": "ohffs/php-pathlib",
    "description": "Very basic port of pythons pathlib to PHP",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Ohffs\\PhpPathlib\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Ohffs",
            "email": "ohffsnotnow@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "pestphp/pest": "^4.1"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    }
}
